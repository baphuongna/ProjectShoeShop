<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AndressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:shrinkColumns="1">

            <TableRow android:layout_height="172dp">

                <TextView
                    android:id="@+id/casual2"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Shoes Store"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="50sp"
                    app:fontFamily="casual" />
            </TableRow>

            <TableRow android:layout_height="49dp">

                <TextView
                    android:id="@+id/txtAndress"
                    android:layout_width="326dp"
                    android:layout_height="52dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="Địa Chỉ :"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Website : http://ShoeStore.com.vn"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Email : ShoeShop@gmail.com"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            </TableRow>

            <TableRow>


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="Điện thoại: 024 7300 1866"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="364dp"
                    android:layout_height="286dp"
                    android:layout_below="@+id/layout"
                    android:orientation="horizontal">

                    <fragment
                        android:id="@+id/map"
                        android:layout_width="388dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>