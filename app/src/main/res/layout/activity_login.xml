<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_email"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <!--<TextView-->
    <!--android:id="@+id/tvResetPassword"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="@dimen/default_margin"-->
    <!--android:gravity="right"-->
    <!--android:text="@string/msg_forget_password_text" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLogin"
            android:onClick="btnUserLogin_Click"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:background="#e8bf31"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/label_login"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="@dimen/large_text" />

        <Button
            android:id="@+id/btnSignin"
            android:onClick="btnRegistrationUser_Click"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:background="@color/colorSliderActive"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="@dimen/large_text" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin"
        android:text="or" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_weight="1"
            android:background="#d34836"
            android:drawableRight="@drawable/google"
            android:paddingLeft="@dimen/btPadding"
            android:paddingRight="@dimen/btPadding"
            android:text="@string/label_sign_in_with"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>